#!/bin/ksh

# putunixsuite - Update all servers with the current script suite
# Owner: Carl Schelin

BASENAME=$(basename "$0")
DIRNAME=$(dirname "$0")

if [[ ! -f ${DIRNAME}/../.config ]]
then
  echo "Unable to locate ${DIRNAME}/../.config. Exiting."
  exit 1
fi

# Source the configuration file
. "${DIRNAME}"/../.config

PROGNAME="putunixsuite"

if [[ ! $RUNBY -eq 5000 ]]
then
  echo "This script must be run by the Unix Service account."
  exit 0
fi

# start time of the push
date

for i in `grep -v "^#" ${SCRIPTS_ETC}/servers`
do
  SERVER=`echo $i|cut -f1 -d:`
  DOMAIN=`echo $i|cut -f2 -d:`
  OS=`echo $i|cut -f3 -d:`

# Check to make sure the target directory exists
# if not, create it and set the perms

  echo $SERVER

  SVRPATH="${SCRIPTS}/servers/$SERVER"

  if [ ! -d $SVRPATH ]
  then
    mkdir $SVRPATH
    chmod 775 $SVRPATH
  fi

  TARGET=$SERVER
  # If the DOMAIN is not empty and DNS works, set TARGET to FQDN
  if [ "$DOMAIN" != "" ]
  then
  	/usr/sbin/host ${SERVER}.${DOMAIN} > /tmp/putunixsuite.host.out 2>&1
	RC=$?
	if [ $RC -eq 0 ];then
  		TARGET="${SERVER}.${DOMAIN}"
  	fi
  fi	


  for j in .config bin run.d etc
  do

# set the timeout value
    TIMEOUT=80

    if [[ $j = '.config' ]]
    then
      /usr/bin/scp -r ${SCRIPTS}/install/unixsuite/.config $TARGET:/opt/unixsuite/ &
    else
      /usr/bin/scp -r ${SCRIPTS}/install/unixsuite/$j/* $TARGET:/opt/unixsuite/$j/ &
    fi
    PID=$!

# wait for the specified number of seconds for scp to complete
# if the timeout is exceeded, kill the process and move on to the next box

# .2 seems to pause enough for the scp command to finish without taking a full second for each system.
    /usr/bin/perl -e 'select(undef,undef,undef,.2)'
    /usr/bin/ps -p $PID
    if [[ $? -eq 0 ]]
    then
      while [[ $TIMEOUT -gt 0 ]]
      do
        /usr/bin/ps -p $PID
        if [[ $? -ne 0 ]]
        then
          break
        fi
        TIMEOUT=$(($TIMEOUT - 1))
        sleep 1
      done
    fi

# if the timeout reaches 0, then the process was killed. Report something.

    if [[ $TIMEOUT -le 0 ]]
    then
      echo "ERROR: Unable to connect to server ($PROGNAME)" >> $SVRPATH/config.status
      echo "ERROR: Unable to connect to server ($PROGNAME)" >> $SVRPATH/morning.status
      chmod 664 $SVRPATH/config.status
      chmod 664 $SVRPATH/morning.status
      kill -KILL $PID
    fi
  done

# special installation of the rrdtool scripts.
# the main scripts; makegraphs, makerrd, makethumbs, and updaterrd are all built upon installation 
# but the other files can be installed

# only run if timeout is greater than 0; assumes the server is accessible.
  if [[ $TIMEOUT -gt 0 ]]
  then
    if [[ $OS = 'Linux' ]]
    then
      /usr/bin/scp -r ${SCRIPTS}/install/unixsuite/install/rrdtool/linux/install $TARGET:/opt/unixsuite/rrdtool/install/ &
      /usr/bin/scp -r ${SCRIPTS}/install/unixsuite/install/rrdtool/linux/scripts $TARGET:/opt/unixsuite/rrdtool/scripts/ &
      /usr/bin/scp -r ${SCRIPTS}/install/unixsuite/install/rrdtool/linux/runstats $TARGET:/opt/unixsuite/rrdtool/ &
      /usr/bin/scp -r ${SCRIPTS}/install/unixsuite/install/rrdtool/linux/watchrrd $TARGET:/opt/unixsuite/rrdtool/ &
    fi
    if [[ $OS = 'SunOS' ]]
    then
      /usr/bin/scp -r ${SCRIPTS}/install/unixsuite/install/rrdtool/solaris/install $TARGET:/opt/unixsuite/rrdtool/install/ &
      /usr/bin/scp -r ${SCRIPTS}/install/unixsuite/install/rrdtool/solaris/scripts $TARGET:/opt/unixsuite/rrdtool/scripts/ &
      /usr/bin/scp -r ${SCRIPTS}/install/unixsuite/install/rrdtool/solaris/runstats $TARGET:/opt/unixsuite/rrdtool/ &
      /usr/bin/scp -r ${SCRIPTS}/install/unixsuite/install/rrdtool/solaris/watchrrd $TARGET:/opt/unixsuite/rrdtool/ &
    fi
  fi

done

# finally, recreate the kickstart install file
cd ${SCRIPTS}/install
rm unixsuite.tar.gz
tar cfv unixsuite.tar unixsuite
gzip -9 unixsuite.tar

# end time of the push
date

exit 0

