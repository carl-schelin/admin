#!/bin/ksh

# archive servers
# Carl Schelin
ADMIN=/usr/local/admin

for i in $(find ${ADMIN}/servers/. -type d -print | awk -F/ '{print $NF}')
do
  OUTPUT=$(egrep -i "^(#$i|$i):" ${ADMIN}/etc/servers | cut -f1 -d:)

  if [[ -z "${OUTPUT}" ]]
  then
    mv ${ADMIN}/servers/"${i}" ${ADMIN}/archive/"${i}"
  fi
done

