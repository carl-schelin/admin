#!/bin/ksh

ADMIN=/usr/local/admin
INTRADO=$ADMIN/install/intrado
HOSTLIST=`grep -v "^#" $ADMIN/etc/servers | cut -f1 -d:`

for i in $HOSTLIST
do
  for j in openview.failed openview.stop chkopenview.completed chkopenview.block
  do
    if [[ -f $ADMIN/servers/$i/$j ]]
    then
      rm $ADMIN/servers/$i/$j
    fi

    scp $i:/opt/intrado/var/$j $ADMIN/servers/$i/
  done
done

/export/home/unixsvc/cschelin/showovfail > /usr/local/httpd/htsecure/reports/ovfailed.output

